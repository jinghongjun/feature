                    android:id="@+id/activity_ontouch_event_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/touch_event_setting_value_touch_event" />
            </RadioGroup>
